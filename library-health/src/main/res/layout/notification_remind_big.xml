<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_shape_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/health_10dp">

    <!-- 时间和提醒内容 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 时间 -->
        <TextView
            android:id="@+id/tv_remind_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/health_notification_black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="15:00" />

        <!-- 提醒文字 -->
        <TextView
            android:id="@+id/tv_remind_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/health_notification_gray"
            android:textSize="14sp"
            tools:text="是时候记录您的血压了!" />
        <!-- 记录按钮 -->
        <TextView
            android:id="@+id/tv_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_button_bg"
            android:gravity="center"
            android:paddingVertical="@dimen/health_5dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="记录" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_remind_logo"
        android:layout_width="@dimen/health_80dp"
        android:layout_height="@dimen/health_80dp"
        tools:src="@drawable/ic_alarm_clock" />
</LinearLayout>

