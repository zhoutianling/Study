<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_process_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/health_15dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_add_remind"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_add_remind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/health_50dp"
        android:layout_margin="@dimen/health_15dp"
        android:background="@drawable/green_shape_bg"
        android:gravity="center"
        android:text="Start Alarm"
        android:textColor="@color/health_white_color"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>




