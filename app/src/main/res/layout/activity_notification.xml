<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_show"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/appThemeColor"
        android:text="显示通知"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_show_reply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/appThemeColor"
        android:text="显示回复通知"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_show_banner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/appThemeColor"
        android:text="显示横幅通知"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_reply" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_show_custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/appThemeColor"
        android:text="常驻通知"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_banner" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_blood_pressure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/appThemeColor"
        android:text="血压提醒"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_custom" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_heart_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/appThemeColor"
        android:text="心率提醒"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_blood_pressure" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_blood_glucose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/appThemeColor"
        android:text="血糖提醒"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_heart_rate" />
</androidx.constraintlayout.widget.ConstraintLayout>